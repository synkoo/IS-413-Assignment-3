@{
    ViewBag.Title = "More Suggestions";
}

@model IEnumerable<ProvoMatjip.Models.Recommendation>


@*Creating the table for suggested restaurants*@

<div>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Suggested By</th>
                <th>Restaurant Name</th>
                <th>Favorite Dish</th>
                <th>Contact</th>
            </tr>
        </thead>
        <tbody>
            @foreach (ProvoMatjip.Models.Recommendation x in Model)
            {
                <tr>
                    <td>@x.Submitter</td>
                    <td>@x.RestaurantName</td>
                    <td>@x.FavoriteDish</td>
                    <td>@x.Phone</td>
                </tr>
            }
        </tbody>
    </table>
</div>